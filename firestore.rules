rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Users can read/write ONLY their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Pledges: Authenticated users can read all (for leaderboard) and create new ones
    match /pledges/{pledgeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Optional: Prevent editing/deleting pledges to maintain integrity
      allow update, delete: if false; 
    }
    
    // Default: Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
